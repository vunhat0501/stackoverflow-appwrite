{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier",
    ],
    "rules": {
        "prettier/prettier": "error",
    },
    "ignorePatterns": ["dist/", "node_modules/", ".next/", "build/"],
}
